@model List<IGrouping<string, FAP.Share.Dtos.PermissionDto>>
@{
    ViewData["Title"] = "Quản lý quyền";
    var modules = ViewBag.Modules as List<string> ?? new();
    var selectedModule = ViewBag.SelectedModule as string;
    var isActive = ViewBag.IsActive as bool?;
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2>Quản lý quyền</h2>
</div>

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["Error"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="card mb-3">
    <div class="card-body">
        <form method="get" asp-action="Index" class="row g-3">
            <div class="col-md-4">
                <label class="form-label">Module:</label>
                <select name="module" class="form-select">
                    <option value="">Tất cả modules</option>
                    @foreach (var module in modules)
                    {
                        <option value="@module" selected="@(selectedModule == module)">@module</option>
                    }
                </select>
            </div>
            <div class="col-md-4">
                <label class="form-label">Trạng thái:</label>
                <select name="isActive" class="form-select">
                    <option value="">Tất cả</option>
                    <option value="true" selected="@(isActive == true)">Hoạt động</option>
                    <option value="false" selected="@(isActive == false)">Không hoạt động</option>
                </select>
            </div>
            <div class="col-md-4 d-flex align-items-end">
                <button type="submit" class="btn btn-primary me-2">Lọc</button>
                <a asp-action="Index" class="btn btn-secondary">Xóa bộ lọc</a>
            </div>
        </form>
    </div>
</div>

<div class="card">
    <div class="card-body">
        @if (Model.Any())
        {
            <div class="row">
                @foreach (var moduleGroup in Model)
                {
                    <div class="col-md-6 mb-4">
                        <div class="card border-primary">
                            <div class="card-header bg-primary text-white">
                                <h5 class="mb-0">@moduleGroup.Key</h5>
                                <small>@moduleGroup.Count() quyền</small>
                            </div>
                            <div class="card-body" style="max-height: 400px; overflow-y: auto;">
                                <table class="table table-sm table-hover">
                                    <thead>
                                        <tr>
                                            <th>Mã quyền</th>
                                            <th>Mô tả</th>
                                            <th>Trạng thái</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var permission in moduleGroup.OrderBy(p => p.Code))
                                        {
                                            <tr>
                                                <td><strong>@permission.Code</strong></td>
                                                <td>
                                                    @if (!string.IsNullOrEmpty(permission.Description))
                                                    {
                                                        <span>@permission.Description</span>
                                                    }
                                                    else
                                                    {
                                                        <span class="text-muted">-</span>
                                                    }
                                                </td>
                                                <td>
                                                    @if (permission.IsActive)
                                                    {
                                                        <span class="badge bg-success">Hoạt động</span>
                                                    }
                                                    else
                                                    {
                                                        <span class="badge bg-secondary">Không hoạt động</span>
                                                    }
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                }
            </div>

            <div class="mt-3">
                <p class="text-muted">
                    <strong>Tổng số quyền:</strong> @Model.Sum(g => g.Count())
                    <span class="ms-3">
                        <strong>Hoạt động:</strong> <span class="badge bg-success">@Model.Sum(g => g.Count(p => p.IsActive))</span>
                        <strong class="ms-2">Không hoạt động:</strong> <span class="badge bg-secondary">@Model.Sum(g => g.Count(p => !p.IsActive))</span>
                    </span>
                </p>
            </div>
        }
        else
        {
            <div class="text-center text-muted py-4">
                <p>Không tìm thấy quyền nào với bộ lọc hiện tại</p>
            </div>
        }
    </div>
</div>

