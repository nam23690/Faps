@model FAP.Share.Dtos.CreateRoleViewModel
@{
    ViewData["Title"] = "Thêm vai trò";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2>Thêm vai trò mới</h2>
    <a asp-action="Index" class="btn btn-secondary">Quay lại danh sách</a>
</div>

<div class="card">
    <div class="card-body">
        <form asp-action="Create" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="mb-3">
                <label asp-for="Name" class="form-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
                <small class="form-text text-muted">Ví dụ: admin, manager, user...</small>
            </div>

            <div class="d-flex justify-content-end gap-2">
                <a asp-action="Index" class="btn btn-secondary">Hủy</a>
                <button type="submit" class="btn btn-primary">Tạo vai trò</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}


