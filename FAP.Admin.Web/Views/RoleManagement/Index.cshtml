@using FAP.Share.Dtos
@model List<RoleDto>
@{
    ViewData["Title"] = "Quản lý vai trò";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2>Quản lý vai trò</h2>
    <a asp-action="Create" class="btn btn-primary">
        <i class="bi bi-plus-circle"></i> Thêm vai trò
    </a>
</div>

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["Error"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="card">
    <div class="card-body">
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>Tên vai trò</th>
                    <th>Số lượng người dùng</th>
                    <th>Thao tác</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var role in Model)
                {
                    <tr>
                        <td>
                            <strong>@role.Name</strong>
                            @if (!string.IsNullOrEmpty(role.NormalizedName) && role.NormalizedName != role.Name)
                            {
                                <br /><small class="text-muted">@role.NormalizedName</small>
                            }
                        </td>
                        <td>
                            <span class="badge bg-info">@role.UserCount người dùng</span>
                        </td>
                        <td>
                            <a asp-action="Details" asp-route-id="@role.Id" class="btn btn-sm btn-info">Chi tiết</a>
                            <a asp-action="Edit" asp-route-id="@role.Id" class="btn btn-sm btn-warning ms-1">Sửa</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        @if (!Model.Any())
        {
            <div class="text-center text-muted py-4">
                <p>Chưa có vai trò nào</p>
            </div>
        }
    </div>
</div>

