@using FAP.Share.Dtos
@model FAP.Share.Dtos.RoleDto
@{
    ViewData["Title"] = "Chi tiết vai trò";
    var usersWithRole = ViewBag.UsersWithRole as List<IdentityUserDto> ?? new();
    var allPermissions = ViewBag.AllPermissions as List<PermissionDto> ?? new();
    var rolePermissions = ViewBag.RolePermissions as List<string> ?? new();
    var rolePermissionDetails = allPermissions.Where(p => rolePermissions.Contains(p.Code)).ToList();
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2>Chi tiết vai trò: @Model.Name</h2>
    <div class="btn-group">
        <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Sửa vai trò</a>
    </div>
</div>

<div class="row">
    <div class="col-md-6">
        <div class="card mb-3">
            <div class="card-header">
                <h5>Thông tin vai trò</h5>
            </div>
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-4">Tên vai trò:</dt>
                    <dd class="col-sm-8"><strong>@Model.Name</strong></dd>

                    @if (!string.IsNullOrEmpty(Model.NormalizedName))
                    {
                        <dt class="col-sm-4">Tên chuẩn hóa:</dt>
                        <dd class="col-sm-8">@Model.NormalizedName</dd>
                    }

                    <dt class="col-sm-4">Số lượng người dùng:</dt>
                    <dd class="col-sm-8">
                        <span class="badge bg-info">@Model.UserCount người dùng</span>
                    </dd>
                </dl>
            </div>
        </div>

        <div class="card">
            <div class="card-header">
                <h5>Người dùng có vai trò này (@usersWithRole.Count)</h5>
            </div>
            <div class="card-body">
                @if (usersWithRole.Any())
                {
                    <div class="table-responsive" style="max-height: 400px; overflow-y: auto;">
                        <table class="table table-sm">
                            <thead>
                                <tr>
                                    <th>Tên đăng nhập</th>
                                    <th>Họ tên</th>
                                    <th>Email</th>
                                    <th>Thao tác</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var user in usersWithRole)
                                {
                                    <tr>
                                        <td>@user.UserName</td>
                                        <td>@user.FullName</td>
                                        <td>@user.Email</td>
                                        <td>
                                            <a asp-controller="UserManagement" asp-action="Details" asp-route-id="@user.Id" class="btn btn-sm btn-link">Xem</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <p class="text-muted">Chưa có người dùng nào có vai trò này</p>
                }
            </div>
        </div>
    </div>

    <div class="col-md-6">
        <div class="card mb-3">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5>Quyền của vai trò</h5>
                @if (rolePermissions.Any() || allPermissions.Any())
                {
                    <a asp-action="AssignPermissions" asp-route-roleId="@Model.Id" class="btn btn-sm btn-primary">Gán quyền cho vai trò</a>
                }
            </div>
            <div class="card-body">
                @if (rolePermissions.Any())
                {
                    <div class="mb-3">
                        <p class="text-muted small mb-2">Tổng số: <strong>@rolePermissions.Count</strong> quyền</p>
                        <div class="border rounded p-2 mb-2">
                            @foreach (var permission in rolePermissions)
                            {
                                <span class="badge bg-primary me-1 mb-1">@permission</span>
                            }
                        </div>
                    </div>
                    
                    <hr />
                    
                    <h6 class="mb-3">Chi tiết quyền:</h6>
                    @if (rolePermissionDetails.Any())
                    {
                        <div style="max-height: 300px; overflow-y: auto;">
                            @foreach (var moduleGroup in rolePermissionDetails.GroupBy(p => p.Module))
                            {
                                <div class="mb-3">
                                    <h6 class="text-primary border-bottom pb-1">@moduleGroup.Key</h6>
                                    <ul class="list-unstyled ms-3">
                                        @foreach (var permission in moduleGroup)
                                        {
                                            <li class="mb-1">
                                                <strong>@permission.Code</strong>
                                                @if (!string.IsNullOrEmpty(permission.Description))
                                                {
                                                    <span class="text-muted">- @permission.Description</span>
                                                }
                                                @if (permission.IsActive)
                                                {
                                                    <span class="badge bg-success ms-1">Active</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-secondary ms-1">Inactive</span>
                                                }
                                            </li>
                                        }
                                    </ul>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <p class="text-muted small">Không tìm thấy chi tiết quyền trong hệ thống</p>
                    }
                }
                else
                {
                    <p class="text-muted">Vai trò này chưa có quyền nào được gán</p>
                    @if (allPermissions.Any())
                    {
                        <a asp-action="AssignPermissions" asp-route-roleId="@Model.Id" class="btn btn-sm btn-primary mt-2">Gán quyền cho vai trò</a>
                    }
                }
            </div>
        </div>

        <div class="card">
            <div class="card-header">
                <h5>Danh sách quyền có sẵn trong hệ thống</h5>
            </div>
            <div class="card-body">
                @if (allPermissions.Any())
                {
                    <div style="max-height: 350px; overflow-y: auto;">
                        @foreach (var moduleGroup in allPermissions.GroupBy(p => p.Module))
                        {
                            <div class="mb-3">
                                <h6 class="text-primary border-bottom pb-2">@moduleGroup.Key</h6>
                                <ul class="list-unstyled ms-3">
                                    @foreach (var permission in moduleGroup)
                                    {
                                        var isAssigned = rolePermissions.Contains(permission.Code);
                                        <li class="@(isAssigned ? "bg-light p-1 rounded" : "")">
                                            @if (isAssigned)
                                            {
                                                <span class="badge bg-success me-1">Đã gán</span>
                                            }
                                            <strong>@permission.Code</strong>
                                            @if (!string.IsNullOrEmpty(permission.Description))
                                            {
                                                <span class="text-muted">- @permission.Description</span>
                                            }
                                            @if (permission.IsActive)
                                            {
                                                <span class="badge bg-success">Active</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-secondary">Inactive</span>
                                            }
                                        </li>
                                    }
                                </ul>
                            </div>
                        }
                    </div>
                }
                else
                {
                    <p class="text-muted">Chưa có quyền nào</p>
                }
            </div>
        </div>
    </div>
</div>

