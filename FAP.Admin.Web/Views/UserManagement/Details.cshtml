@model FAP.Share.Dtos.IdentityUserDto
@{
    ViewData["Title"] = "Chi tiết người dùng";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2>Chi tiết người dùng</h2>
    <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
</div>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["Success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="row">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h5>Thông tin cơ bản</h5>
            </div>
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-4">Tên đăng nhập:</dt>
                    <dd class="col-sm-8">@Model.UserName</dd>

                    <dt class="col-sm-4">Email:</dt>
                    <dd class="col-sm-8">@Model.Email</dd>

                    <dt class="col-sm-4">Họ và tên:</dt>
                    <dd class="col-sm-8">@Model.FullName</dd>

                    <dt class="col-sm-4">Mã cơ sở:</dt>
                    <dd class="col-sm-8">@Model.CampusId</dd>

                    <dt class="col-sm-4">Trạng thái:</dt>
                    <dd class="col-sm-8">
                        @if (Model.IsLocked)
                        {
                            <span class="badge bg-danger">Đã khóa</span>
                        }
                        else
                        {
                            <span class="badge bg-success">Hoạt động</span>
                        }
                    </dd>

                    <dt class="col-sm-4">Email đã xác nhận:</dt>
                    <dd class="col-sm-8">
                        @if (Model.EmailConfirmed)
                        {
                            <span class="badge bg-success">Đã xác nhận</span>
                        }
                        else
                        {
                            <span class="badge bg-warning">Chưa xác nhận</span>
                        }
                    </dd>

                    <dt class="col-sm-4">Ngày tạo:</dt>
                    <dd class="col-sm-8">@Model.CreatedAt.ToString("dd/MM/yyyy HH:mm")</dd>
                </dl>

                <div class="mt-3">
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Chỉnh sửa</a>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-6">
        <div class="card mb-3">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5>Vai trò</h5>
                <a asp-action="AssignRoles" asp-route-userId="@Model.Id" class="btn btn-sm btn-primary">Gán vai trò</a>
            </div>
            <div class="card-body">
                @if (Model.Roles.Any())
                {
                    <ul class="list-group">
                        @foreach (var role in Model.Roles)
                        {

                            var roleIdMap = ViewBag.RoleIdMap as Dictionary<string, string> ?? new Dictionary<string, string>(StringComparer.OrdinalIgnoreCase);
                            var roleIdForLink = roleIdMap.ContainsKey(role) ? roleIdMap[role] : null;

                            var map = ViewBag.RolePermissionsMap as Dictionary<string, List<string>>;
                            var perms = map != null && map.ContainsKey(role) ? map[role] : new List<string>();


                            <li class="list-group-item">
                                <div class="d-flex justify-content-between align-items-start">
                                    <div>
                                        <strong>@role</strong>
                                    </div>
                                    <div>
                                        <a asp-controller="RoleManagement" asp-action="Details" asp-route-id="@roleIdForLink" class="btn btn-sm btn-link">Chi tiết vai trò</a>
                                    </div>
                                </div>

                                @if (perms.Any())
                                {
                                    <div class="mt-2">
                                        @foreach (var p in perms)
                                        {
                                            <span class="badge bg-secondary me-1">@p</span>
                                        }
                                    </div>
                                }
                                else
                                {
                                    <div class="text-muted small mt-2">Không có quyền từ vai trò này</div>
                                }
                            </li>
                        }
                    </ul>
                }
                else
                {
                    <p class="text-muted">Chưa có vai trò nào</p>
                }
            </div>
        </div>

        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5>Quyền của người dùng</h5>
                <a asp-action="AssignPermissions" asp-route-userId="@Model.Id" class="btn btn-sm btn-primary">Gán quyền cho người dùng</a>
            </div>
            <div class="card-body">
                <div class="alert alert-info small mb-2">
                    <strong>Lưu ý:</strong> Quyền của người dùng = Quyền từ vai trò + Quyền gán trực tiếp cho người dùng
                </div>
                @if (Model.Permissions.Any())
                {
                    <div class="border rounded p-2">
                        @foreach (var permission in Model.Permissions)
                        {
                            <span class="badge bg-primary me-1">@permission</span>
                        }
                    </div>
                    <p class="text-muted small mt-2">Tổng số: @Model.Permissions.Count quyền</p>
                }
                else
                {
                    <p class="text-muted">Chưa có quyền nào</p>
                }
            </div>
        </div>
    </div>
</div>

